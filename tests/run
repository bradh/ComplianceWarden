#!/usr/bin/env bash
set -euo pipefail

readonly BIN=$1
readonly scriptDir=$(dirname $0)

readonly tmpDir=/tmp/test-cw-$$
trap "rm -rf $tmpDir" EXIT
mkdir -p "$tmpDir"

function main
{
  $BIN/cw.exe $scriptDir/aac.mp4 > $tmpDir/aac.new
  # cp $tmpDir/aac.new $scriptDir/aac.ref
  diff -Naurw $scriptDir/aac.ref $tmpDir/aac.new
  echo "OK"
}

main "$@"
